{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/example.json",
  "type": "array",
  "title": "The root schema",
  "description": "The root schema comprises the entire JSON document.",

  "items": {
    "anyOf": [
      {
        "type": "object",
        "required": ["space", "catalog", "organization", "server"],

        "properties": {
          "space": {
            "anyOf": [
              {
                "type": "string",
                "minLength": 2
              },
              {
                "type": "boolean"
              }
            ]
          },
          "catalog": {
            "type": "string",
            "minLength": 2
          },
          "organizations": {
            "type": "string",
            "minLength": 2
          },
          "server": {
            "type": "string",
            "minLength": 2
          },
          "username": {
            "type": "string",
            "minLength": 2
          },
          "password": {
            "type": "string",
            "minLength": 2
          },
          "apiKey": {
            "type": "string",
            "minLength": 2
          }
        },
        "oneOf": [
          {
            "required": ["username", "password"]
          },
          {
            "required": ["apiKey"]
          }
        ],
        "additionalProperties": true
      }
    ]
  }
}
